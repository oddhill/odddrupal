{
  "name": "oddhill/odddrupal",
  "description": "A custom base for installing and upgrading Drupal 8.",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Christoffer Palm <christoffer.palm@oddhill.se>",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    },
    {
      "type": "git",
      "url": "https://github.com/oddhill/d8-profile-odddrupal"
    }
  ],
  "require": {
    "composer/installers": "~1.0.20",
    "cweagans/composer-patches": "~1.0",
    "drupal/core": "8.0.0",
    "drush/drush": "~8.0",
    "wikimedia/composer-merge-plugin": "~1.3.0",
    "drupal/odddrupal": "*"
  },
  "require-dev": {},
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": "sh ./scripts/composer/post-install.sh"
  },
  "extra": {
    "installer-paths": {
      "public/core": ["type:drupal-core"],
      "public/modules/contrib/{$name}": ["type:drupal-module"],
      "public/profiles/contrib/{$name}": ["type:drupal-profile"],
      "public/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "merge-plugin": {
      "include": [
        "composer-site.json"
      ]
    }
  }
}
