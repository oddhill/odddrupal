# General ignores
.DS_Store
.idea

# Ignore directories generated by Composer
/vendor
/drush/contrib
/public/core
/public/modules/contrib
/public/themes/contrib
/public/profiles/contrib

# Do not version the htaccess.
/public/.htaccess

# Ignore Drupal's file directory
/public/sites/default/files
/public/sites/default/settings.*.php

# User generated content should not be in the repository
/public/sites/*/files/*
/public/sites/*/tmp/*

# Include README in the files folders.
!/public/sites/*/files/README.txt

# Ignore settings.
/public/sites/default/settings.*.php
/public/sites/default/services.yml
